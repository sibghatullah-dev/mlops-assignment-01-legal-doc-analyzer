[flake8]
max-line-length = 120
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    node_modules,
    model/__pycache__,
    app/__pycache__
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    F401   # module imported but unused (sometimes needed for imports)
per-file-ignores =
    __init__.py:F401
